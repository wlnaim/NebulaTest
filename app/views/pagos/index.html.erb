<p id="notice"><%= notice %></p>

<h1>Pagos</h1>

<table class="table table-stripe">
  <thead>
    <tr>
      <th scope="col">Prestamo</th>
      <th scope="col">Pago interes</th>
      <th scope="col">Pago monto periodico</th>
      <th scope="col">Pago fecha</th>
      <th scope="col">Pago capital</th>
      <th scope="col">Pago prestamo saldo</th>
      <th scope="col">Pago periodo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pagos.each do |pago| %>
      <tr>
        <td><%= pago.prestamo_id %></td>
        <td><%= pago.pago_interes %></td>
        <td><%= pago.pago_monto_periodico %></td>
        <td><%= pago.pago_fecha %></td>
        <td><%= pago.pago_capital %></td>
        <td><%= pago.pago_prestamo_saldo %></td>
        <td><%= pago.pago_periodo %></td>
        <td><%= link_to 'Show', pago %></td>
        <td><%= link_to 'Edit', pago_edit_path(pago) %></td>
        <td><%= link_to 'Destroy', pago, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

