<h2>Generar prestamo</h2>

<%= link_to 'Regresar', prestamos_path, class: 'btn btn-outline-primary', role: "button text-white" %>

<div class="row">
    <div class="col-md-6">
        <%= form_for @prestamo do |f| %>
            <div class="form-group">
                <%= f.label :interes_prestamo %>
                <%= f.number_field(:interes_prestamo,  {:class => 'form-control', :required => 'required'}) %>
            </div>
            <div class="form-group">
                <%= f.label :monto_prestamo %> 
                <%= f.number_field(:monto_prestamo,  {:class => 'form-control',  :required => 'required'}) %>
            </div>
            <div class="form-group">
                <%= f.label :plazo_prestamo %> 
                <%= f.number_field(:plazo_prestamo,  {:class => 'form-control',  :required => 'required'}) %>
            </div>
            <div>
                <%= f.submit('Registrar prestamo', {:class => 'btn btn-primary'}) %>
            </div>
        <% end %>
    </div>
</div>

